<section id="faq" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto max-w-4xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Frequently Asked Questions</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400">Got questions? We've got answers</p>
    </div>

    <div class="space-y-6">
      {% for item in config.faqs %}
      <div class="bg-white dark:bg-gray-900 p-6 rounded-2xl shadow-lg">
        <h3 class="text-xl font-bold mb-3">{{ item.question }}</h3>
        <p class="text-gray-600 dark:text-gray-400">{{ item.answer }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
