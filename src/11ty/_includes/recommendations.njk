<section id="recommendations" class="py-20 px-4 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Find Your Perfect Stack</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Recommended toolkits based on your stage. Start free, scale as you grow.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {% for stack in config.stacks %}
      <div class="bg-white dark:bg-gray-900 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow border-2 {% if stack.popular %}border-blue-500 shadow-xl{% else %}border-transparent hover:border-{{ stack.color }}-500{% endif %} relative">
        {% if stack.popular %}
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
          <span class="bg-blue-500 text-white px-4 py-1 rounded-full text-sm font-semibold">
            Most Popular
          </span>
        </div>
        {% endif %}

        <div class="mb-6">
          <div class="w-16 h-16 bg-{{ stack.color }}-100 dark:bg-{{ stack.color }}-900 rounded-2xl flex items-center justify-center text-3xl mb-4">
            {{ stack.emoji }}
          </div>
          <h3 class="text-2xl font-bold mb-2">{{ stack.title }}</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
            {{ stack.description }}
          </p>
          <div class="text-3xl font-bold text-{{ stack.color }}-600 dark:text-{{ stack.color }}-400">
            {{ stack.cost | replace("$", "") }}<span class="text-lg text-gray-500">{% if stack.cost.includes("/mo") %}/mo{% endif %}</span>
          </div>
        </div>

        <div class="space-y-4">
          <div class="border-t pt-4">
            <h4 class="font-semibold mb-3 text-sm uppercase text-gray-500">{% if stack.id == "solo" %}Essential Tools{% elif stack.id == "scaleup" %}Professional Stack{% else %}Recommended Stack{% endif %}</h4>
            <ul class="space-y-2 text-sm">
              {% for tool in stack.tools %}
              <li class="flex items-start">
                <span class="text-green-500 mr-2">âœ“</span>
                <span><strong>{{ tool.name }}</strong> - {{ tool.purpose }} ({{ tool.pricing }})</span>
              </li>
              {% endfor %}
            </ul>
          </div>

          <div class="pt-4">
            <div class="bg-{{ stack.color }}-50 dark:bg-{{ stack.color }}-900/20 rounded-lg p-4 text-sm">
              <p class="font-semibold mb-1">ðŸ’¡ Pro Tip:</p>
              <p class="text-gray-600 dark:text-gray-400">{{ stack.proTip }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- Comparison Note -->
    <div class="mt-12 text-center">
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        Not sure which stage you're in? See the full breakdown in our guide.
      </p>
      <a href="https://github.com/tddworks/app-growth-toolkit/blob/main/APP_GROWTH_TOOLKIT.md#-complete-toolkit-recommendation" target="_blank" class="inline-flex items-center text-blue-600 dark:text-blue-400 font-semibold hover:underline">
        View Detailed Comparison â†’
      </a>
    </div>
  </div>
</section>
