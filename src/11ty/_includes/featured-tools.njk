<section id="tools" class="py-20 px-4 bg-white dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Featured Tools</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Hand-picked tools that successful app founders actually use
      </p>
    </div>

    <!-- Tool Categories Tabs -->
    <div class="mb-12">
      <div class="flex flex-wrap justify-center gap-4 mb-8">
        {% for category in config.categories %}
        <button class="tool-category-btn {% if category.id == 'all' %}active{% endif %} px-6 py-3 rounded-lg font-semibold transition-all" data-category="{{ category.id }}">
          {% if category.emoji %}{{ category.emoji }} {% endif %}{{ category.label }}
        </button>
        {% endfor %}
      </div>
    </div>

    <!-- Featured Tools Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for tool in config.tools %}
      <div class="tool-card bg-gray-50 dark:bg-gray-800 rounded-2xl p-6 hover:shadow-xl transition-shadow border border-gray-200 dark:border-gray-700" data-category="{{ tool.category }}">
        <div class="flex items-start justify-between mb-4">
          <div class="w-12 h-12 bg-gradient-to-br {{ tool.gradient }} rounded-xl flex items-center justify-center text-2xl">
            {{ tool.emoji }}
          </div>
          <span class="px-3 py-1 {{ config.pricingBadges[tool.pricing].color }} text-xs font-semibold rounded-full">
            {{ config.pricingBadges[tool.pricing].label }}
          </span>
        </div>
        <h3 class="text-xl font-bold mb-2">{{ tool.name }}</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
          {{ tool.description }}
        </p>
        <div class="flex items-center justify-between">
          <a href="{{ tool.url }}" target="_blank" class="text-blue-600 dark:text-blue-400 font-semibold hover:underline text-sm">
            Visit â†’
          </a>
          <span class="text-xs text-gray-500">{{ tool.platform }}</span>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- View All CTA -->
    <div class="text-center mt-12">
      <a href="APP_GROWTH_TOOLKIT.md" class="inline-flex items-center px-8 py-4 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-xl hover:scale-105 transition-transform font-semibold">
        <span class="mr-3">ðŸ“š</span>
        View Complete Guide ({{ config.tools.length }}+ Tools)
      </a>
    </div>
  </div>
</section>

<style>
.tool-category-btn {
  background: white;
  color: #6b7280;
  border: 2px solid #e5e7eb;
}

.dark .tool-category-btn {
  background: #1f2937;
  color: #9ca3af;
  border-color: #374151;
}

.tool-category-btn.active {
  background: #3b82f6;
  color: white;
  border-color: #3b82f6;
}

.tool-category-btn:hover:not(.active) {
  border-color: #3b82f6;
  color: #3b82f6;
}
</style>

<script>
// Tool category filtering
document.addEventListener('DOMContentLoaded', function() {
  const categoryBtns = document.querySelectorAll('.tool-category-btn');
  const toolCards = document.querySelectorAll('.tool-card');

  function filterByCategory(category) {
    // Update active button
    categoryBtns.forEach(b => b.classList.remove('active'));
    const targetBtn = document.querySelector(`.tool-category-btn[data-category="${category}"]`);
    if (targetBtn) {
      targetBtn.classList.add('active');
    }

    // Filter tools
    toolCards.forEach(card => {
      if (category === 'all' || card.dataset.category === category) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }

  categoryBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      filterByCategory(this.dataset.category);
    });
  });

  // Handle category filter links from features section
  document.querySelectorAll('.category-filter-link').forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const category = this.dataset.filterCategory;

      // Scroll to tools section
      document.querySelector('#tools').scrollIntoView({ behavior: 'smooth' });

      // Filter by category after a short delay to allow scrolling
      setTimeout(() => {
        filterByCategory(category);
      }, 300);
    });
  });
});
</script>
